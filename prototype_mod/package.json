{
  "name": "prototype_mod",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "bun test",
    "generate-tests": "bun run scripts/generate-tests.ts",
    "clean-mod": "rm mod/**/*.lua",
    "build-mod": "tstl",
    "watch-mod": "tstl --watch",
    "publish-mod": "bun run clean-mod && bun run build-mod && export $(xargs <.env) && cd mod && fmtk publish"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/js-yaml": "^4.0.9",
    "lua-types": "^2.13.1",
    "typed-factorio": "^3.31.0",
    "typescript-to-lua": "^1.32.0",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "factoriomod-debug": "^2.0.9",
    "js-yaml": "^4.1.0"
  },
  "prettier": {
    "semi": false
  }
}
